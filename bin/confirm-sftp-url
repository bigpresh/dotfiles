#!/bin/bash

INSTALL_USER=$1
CONFIRM_INSTANCE=$2

if [[ "$INSTALL_USER" == "" ]]; then
    echo "Usage: confirm-sftp-url installuser [instancename]"
    exit
fi

if [[ "$CONFIRM_INSTANCE" == "" ]]; then
    CONFIRM_INSTANCE=main
fi
CONFIG=/opt/drains-$INSTALL_USER/etc/exchange_Confirm_${CONFIRM_INSTANCE}_files.conf

if [ ! -f $CONFIG ]; then
    echo "$INSTALL_USER has no exchange_Confirm_files.conf!"
    exit
fi


sudo -u $INSTALL_USER cat $CONFIG | jq -r '"\(.remote.protocol)://\(.remote.user):\(.remote.password)@\(.remote.host)/"'

