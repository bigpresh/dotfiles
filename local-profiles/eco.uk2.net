# Local machine-specific .profile extensions for Eco.
echo ".profile-local loaded, added cdmachinelogs command"

# Easy function to change to the current day's log dir for the machine named -
# for instance, 'cdmachinelogs rasputin':
function cdmachinelogs {
    MACHINE="$1"

    if [ "$MACHINE" == "" ]; then
        echo "Usage: $0 machinename"
        return
    fi

    DIR=/log/uk2/$MACHINE/$(date +%Y/%b/%-d)

    cd $DIR;
}

# and add auto-completion on machine names, for tab-complete goodness:
complete -W "$(find /log/uk2 -maxdepth 1 -mindepth 1 -type d -printf '%f ')" cdmachinelogs

